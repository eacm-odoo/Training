<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="marginality_data_initializer_wizard_view_form" model="ir.ui.view">
            <field name="name">marginality_data_initializer_wizard_view_form</field>
            <field name="model">marginality.data.initializer.wizard</field>
            <field name="arch" type="xml">
                <form string="Marginality Data initializer">
                    <group>
                        <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                        <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                    </group>      
                    <footer>
                        <button name="button_confirm"  string="Initialize Data" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
                </form>
            </field>
        </record>
    
        <record id="action_marginality_data_initializer_wizard" model="ir.actions.act_window">
            <field name="name">Action marginality data initializer wizard</field>
            <field name="res_model">marginality.data.initializer.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="marginality_data_initializer_wizard_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_action_marginality_data_initializer_wizard" 
            name="Compute Marginality Model" 
            action="action_marginality_data_initializer_wizard" 
            sequence="1" 
            parent="project.menu_project_report" 
            groups="base.group_system"
            />
        
    </data>
</odoo>
