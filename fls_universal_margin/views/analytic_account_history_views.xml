<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="analytic_account_history_view_list" model="ir.ui.view">
        <field name="name">analytic_account_history_view_list</field>
        <field name="model">analytic.account.history</field>
        <field name="arch" type="xml">
            <tree edit="1" string="Model Name">
                <field name="date"/>
                <field name="analytic_account_id"/>
                <field name="project_manager_id"/>
                <field name="operating_director_id"/>
                <field name="salesperson_id"/>
                <field name="project_name"/>
            </tree>
        </field>
    </record>

    <record id="analytic_account_history_view_search" model="ir.ui.view">
        <field name="name">analytic_account_history_view_search</field>
        <field name="model">analytic.account.history</field>
        <field name="arch" type="xml">
            <search string="Model Name">
                <field name="date"/>
                <field name="analytic_account_id"/>
                <field name="project_manager_id"/>
                <field name="operating_director_id"/>
                <field name="salesperson_id"/>
                <field name="project_name"/>
            </search>
        </field>
    </record>

    <record id="analytic_account_history_view_form" model="ir.ui.view">
        <field name="name">analytic_account_history_view_form</field>
        <field name="model">analytic.account.history</field>
        <field name="arch" type="xml">
            <form string="Model Name">
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="salesperson_id"/>
                            <field name="project_name"/>
                        </group>
                    <group>
                        <field name="analytic_account_id"/>
                        <field name="project_manager_id"/>
                        <field name="operating_director_id"/>
                    </group>
                    </group>      
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_analytic_account_history" model="ir.actions.act_window">
        <field name="name">Analytic Account History</field>
        <field name="res_model">analytic.account.history</field>
        <field name="view_id" ref="analytic_account_history_view_list"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Region
            </p>
        </field>
    </record>

    <menuitem 
        name="Account Analytic History" 
        id="menu_action_analytic_account_history" 
        action="action_analytic_account_history" 
        parent="project.menu_project_report"
        groups="base.group_system"/>
    </data>
</odoo>
