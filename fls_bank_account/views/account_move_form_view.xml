<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref= "account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="bank_ids" attrs="{'invisible': True}"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']//field[@name='partner_bank_id']" position="replace">
                <field name="partner_bank_id"
                        domain="[('id', 'in', bank_ids)]"
                        attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))],
                                'readonly': [('state', '!=', 'draft'),('state', '!=', 'to_approve')]}"/>
            </xpath>
            <xpath expr="//group[@id='other_tab_group']//field[@name='partner_bank_id']" position="replace">
                <field name="partner_bank_id"
                        domain="[('id', 'in', bank_ids)]"
                        attrs="{'readonly': [('state', '!=', 'draft'),('state', '!=', 'to_approve')]}"/>
            </xpath>
        </field>
    </record> 
</odoo>
