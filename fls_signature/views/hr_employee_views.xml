<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_form_inherit_fls_signature" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.fls.partner</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page string="Signature">
                    <group>
                        <field name="address_home_complete" invisible="1"/>
                        <field name="country_name" invisible="1"/>
                        <field name="signed_document" widget="one2many_list" options="{'no_create': True}">
                            <tree string="Attachments">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="file_size"/>
                                <field name="create_date"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="hr_employee_fls_hr_view_search" model="ir.ui.view">
            <field name="name">hr.employee.fls.hr.search</field>
            <field name="model">hr.employee.fls.hr</field>
            <field name="arch" type="xml">
                <search string="fls Employees">
                    <field name="name" string="Employees" filter_domain="['|',('work_email','ilike',self),('name','ilike',self)]"/>
                    <field name="job_title" string="Job Title"/>
                    <searchpanel>
                        <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                        <field name="department_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
             </field>
        </record>

    <record id="hr_employee_fls_hr_view_form" model="ir.ui.view">
            <field name="name">hr.employee.fls.hr.form</field>
            <field name="model">hr.employee.fls.hr</field>
            <field name="arch" type="xml">
                <form string="Employee" >
                    <sheet>
                        <field name="avatar_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"avatar_128"}'/>
                            <div class="oe_title">
                            <label for="name" string="Employee Name"/>
                            <h1 class="d-flex flex-row">
                                <span class="me-2">
                                    <widget name="hr_employee_chat" invisible="not context.get('chat_icon')"/>
                                </span>
                                <field name="name" placeholder="e.g. John Doe" required="True"
                                    style="font-size: min(4vw, 2.6rem);"/>
                            </h1>
                            <h2>
                                <field name="job_title" placeholder="Job Title" />
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="mobile_phone" widget="phone"/>
                                <field name="work_phone" widget="phone"/>
                                <field name="work_email" widget="email"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <record id="hr_employee_fls_hr_view_kanban" model="ir.ui.view">
            <field name="name">hr.employee.fls.hr.kanban</field>
            <field name="model">hr.employee.fls.hr</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="hr_presence_state"/>
                    <field name="user_id"/>
                    <field name="user_partner_id"/>
                    <field name="last_activity"/>
                    <field name="hr_icon_display"/>
                    <field name="show_hr_icon_display"/>
                    <field name="image_128" />
                    <templates>
                        <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                            <field name="image_1920" class="o_kanban_image_fill_left d-block" preview_image="image_128"
                                widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <!-- <field name="employee_id" /> -->
                                        <!-- <span t-if="record.job_title.raw_value" class="o_kanban_record_subtitle"><field name="job_title"/></span> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record id="hr_employee_fls_hr_action" model="ir.actions.act_window">
            <field name="name">Fls: Employees</field>
            <field name="res_model">hr.employee.fls.hr</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="hr_employee_fls_hr_view_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                test dipa
              </p>
            </field>
        </record>

    <menuitem
            id="menu_hr_employee_fls_hr_action"
            name="fls Employees"
            action="hr_employee_fls_hr_action"
            parent="hr.menu_hr_root"
            sequence="0"/>

</odoo>
