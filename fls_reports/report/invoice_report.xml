<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="external_layout_standard_invoice_mobility">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            
            </div>
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_report_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
               
                <t t-out="0"/>
            </div>

            <div t-if="o.move_type in ['out_invoice','out_refund']" class="footer">
                <div>If you have any questions concerning this invoice, please call us.</div>
                <div style = "text-align:right;">Sincerely, Accounts Receivable</div>
                <div style = "text-align:center;"><b>THANK YOU FOR YOUR BUSINESS!</b></div>
            </div>
        </template>

        <template id="external_layout_invoice_mobility">

            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
    
            <t t-call="fls_reports.external_layout_standard_invoice_mobility"><t t-out="0"/></t>
            
        </template>

        <template id="report_invoice_document_mobility" inherit_id="account.report_invoice_document">
            <t t-call="web.external_layout" position="attributes">
                <attribute name="t-call">fls_reports.external_layout_invoice_mobility</attribute>
            </t>
            <xpath expr="//div[hasclass('page')]" position="before">
                <style type="text/css">
                    .border {
                        border: 1px solid black;
                    }
                    td {
                        text-align: left;
                        padding-left: 10px;
                    }
                    th{
                        text-decoration: underline;
                        font-weight: bold;
                    }
                </style>

                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id"/>
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                </t>

                <div t-if="o.move_type in ['out_invoice','out_refund']" >
                    <div class="col-xs-4 pull-left" style="width: 60%; float:left">
                        <img style="width: 300px;height=300px" t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-start" alt="Logo"/>
                    </div>
                  <div style="width: 40%; float:right" class="col-xs-4 pull-right text-right">
                    <div name="company_address" t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <div t-if="company.phone">Phone: <span t-field="company.phone"/></div>
                    <div t-if="company.email">Email: <span t-field="company.email"/></div>
                    <div t-if="company.l10n_nl_kvk">KVK: <span t-field="company.l10n_nl_kvk"/></div>
                    <div t-if="company.country_code in ['AU','NL','DE'] and company.vat">VAT: <span t-field="company.vat"/></div>
                    <div t-if="company.company_registry">ABN: <span t-field="company.company_registry"/></div>
                    <br/>
                    <div style="text-align:left;" t-if="company.country_code == 'AU'"> <h3>Tax Invoice </h3></div> 
                    <div style="text-align:left;" t-else="else"><h3>Invoice</h3></div> 
                    <div t-if="o.name">INVOICE NO: <span t-field="o.name"/></div>
                    <div t-if="o.invoice_date">Date: <span t-field="o.invoice_date"/></div>
                  </div>    
                </div>
                <h1  t-if="o.move_type in ['in_invoice','in_refund']" >INVOICE</h1>
                <div  t-if="o.move_type in ['in_invoice','in_refund']">
                    <div class="col-xs-4" style="width: 70%; float:left ">
                        <div >INVOICE #: <span t-field="o.ref"/></div>
                        <div >INVOICE DATE: <span t-field="o.invoice_date"/></div>
                    </div>
                    <div style="width: 30%; float:right" class="col-xs-4">
                        <div>DELIVERY DATE: <span t-field="o.date"/></div>
                        <div>PAYMENT TERM: <span t-field="o.invoice_payment_term_id.name"/></div>
                    </div>    
                    <br/>
                </div>
                <div  t-if="o.move_type in ['in_invoice','in_refund']" class="page">
                    <div class="col-xs-4" style="width: 50%; float:left ">
                        <h6 style="background-color: rgba(169, 169, 169, 0.5); padding: 3px; border: 1px solid black;">SELLER</h6>
                        <address class="mb-1" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>
                    <div style="width: 50%; float:right" class="col-xs-4">
                        <h6 style="background-color: rgba(169, 169, 169, 0.5); padding: 3px; border: 1px solid black;">BUYER</h6>
                        <address class="mb-1" t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>    
                </div>
                <div t-if="o.move_type in ['in_invoice','in_refund']">
                    <br/><br/>
                    <div t-if="o.bank_acount_id" style="font-weight: bold;padding-top:20px;">Payment Instructions:</div>
                    <div t-if="o.bank_acount_id">IBAN/Account Number: <span t-field="o.bank_acount_id.bank_bic"/></div>
                    <div t-if="o.bank_acount_id">SWIFT: <span t-field="o.bank_acount_id.bank_bic"/></div>
                    <div t-if="o.bank_acount_id">Bank: <span t-field="o.bank_acount_id.bank_name"/></div>
                    <div t-if="o.bank_acount_id">Beneficiary: <span t-field="o.bank_acount_id.acc_holder_name"/></div>
                </div>
                <t t-set="orders" t-value="o.invoice_line_ids.mapped('sale_line_ids').mapped('order_id')"/>
                <t t-set="order_id" t-value="orders and orders[0] or False"/>

                    <div  t-if="o.move_type in ['out_invoice','out_refund']"  class=" pull-right text-right" >


                                    <span style="padding-left:60px;"> TO: <span t-field="o.partner_id.name"/></span><address style="padding-left:87px;" class="mb-0" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                    <div style="padding-left:87px;" t-if="company.country_code in ['AU','NL','DE'] and o.partner_id.vat">VAT ID: <span t-field="o.partner_id.vat"/></div>
                                    <div style="padding-left:87px;" t-if="o.partner_id.company_registry">ABN: <span t-field="o.partner_id.company_registry"/></div>
                        
                    </div><br/>
                <div  t-if="o.move_type in ['out_invoice','out_refund']" class="row page">
                    <table style="width:100%; border: 1px solid black;border-collapse: collapse;">
                        <thead style="border: 1px solid black;border-collapse: collapse;">
                            <tr>
                                <th class = "text-center" >ORDER REFERENCE</th>
                                <th class = "text-center" >DATE SHIPPED</th>
                                <th class = "text-center" >TERMS</th>
                            </tr>
                        </thead>
                        <tbody style="border: 1px solid black;border-collapse: collapse;">
                            <tr>
                                <td class="text-center">
                                    <div t-if="o.client_order_ref"><span t-esc="o.client_order_ref"/></div>
                                </td>
                                <td class="text-center">
                                    <span t-esc="o.date"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="o.invoice_payment_term_id.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br/>
            </xpath>
            <xpath expr="//div[hasclass('page')]//h2" position="replace"/>
            <xpath expr="//div[hasclass('page')]//div[hasclass('row')][1]" position="replace"/>
            <xpath expr="//div[hasclass('page')]//div[hasclass('row')][1]" position="replace"/>
            <xpath expr="//table[@name='invoice_line_table']" position="replace">

                <table class="" name="invoice_line_table">
                    <thead >
                        <tr style="border: 1px solid black;border-collapse: collapse;">
                            <th class="text-center" width="15%">DESCRIPTION</th>
                            <th class="text-center" width="8%">UNITS</th>
                            <th class="text-center" width="5%">QUANTITY</th>
                            <th class="text-center" width="9%">UNIT PRICE</th>
                            <th class="text-center" width="10%">SUBTOTAL</th>
                        </tr>
                    </thead>
                    <tbody style="border: none;" >
                        <tr  class="invoice_tbody" style="border: 1px solid black;border-collapse: collapse;" t-foreach="o.invoice_line_ids" t-as="l">
                            <td class="text-center">
                                <div t-if="o.analytic_account_to_invoice"> <span  t-field="l.account_analytic.name"/></div>
                                <div t-if="not o.analytic_account_to_invoice"><span t-field="l.name"/></div>
                            </td>
                            <td class="text-center">
                                <span t-field="l.product_uom_id" />
                            </td>
                            <td class="text-center">
                                <span t-field="l.quantity"/>
                            </td>
                            <td class="text-center">
                                <span t-field="l.price_unit"/>
                            </td>

                            <td class="text-center" id="subtotal">
                                <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr t-if="o.company_id.country_code in ['AU','NL','DE']">
                            <td style="border: none;" colspan="3"></td>
                            <td class="text-center">SUBTOTAL</td>
                            <td class="text-center"  ><span t-field="o.amount_untaxed_signed"/></td>
                        </tr>
                        <tr >
                            <td style="border: none;" colspan="3"></td>
                            <td class="text-center" t-if="o.company_id.country_code == 'AU'">GST 10%</td>
                            <td class="text-center" t-if="o.company_id.country_code == 'NL'">VAT 21%</td>
                            <td class="text-center" t-if="o.company_id.country_code == 'DE'">VAT 19%</td>
                            <td class="text-center" t-if="o.company_id.country_code in ['AU','NL','DE']"><span t-field="o.amount_tax_signed"/></td>
                        </tr>
                        <tr style="border: none;" >
                            <td style="border: none;" colspan="3"></td>
                            <td class="text-center" >TOTAL</td>
                            <td class="text-center" ><span t-field="o.amount_total"/></td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <table t-if="o.move_type in ['out_invoice','out_refund']" class="table table-sm o_main_table table-borderless"  >
                    <tbody style="padding-left:10px;">

                        <tr>
                            <td></td>
                            <td>
                                <div t-if="o.bank_acount_id" style="font-weight: bold;">WIRE INSTRUCTIONS:</div>
                                <div t-if="o.bank_acount_id">    Beneficiary: <span t-field="o.bank_acount_id.acc_holder_name"/></div>
                                <div t-if="o.bank_acount_id">    Account Number: <span t-field="o.bank_acount_id.acc_number"/></div>
                                <div t-if="o.bank_acount_id">    IBAN: <span t-field="o.bank_acount_id.bank_bic"/></div>
                                <div t-if="o.bank_acount_id">    Bank: <span t-field="o.bank_acount_id.bank_name"/></div>
                                <div t-if="o.bank_acount_id and o.company_id.country_code == 'DE'">    BIC: <span t-field="o.bank_acount_id.bank_bic"/></div>
                                <div t-if="o.bank_acount_id and o.company_id.country_code in ['NL','US']">    SWIFT: <span t-field="o.bank_acount_id.bank_bic"/></div>
                                <div t-if="o.bank_acount_id and o.company_id.country_code == 'AU'">    BSB Number: <span t-field="o.bank_acount_id.bank_bic"/></div>
                                <br/>
                                <div t-if = "o.company_id.country_code == 'US'">
                                    <div style="font-weight: bold;">
                                        Check Remittance
                                    </div>
                                    <div>Please make your check payable to First Line Software Inc.</div>
                                    <div>Please mail your check to:</div>
                                    <div>First Line Software Inc, P.O. Box  824147, Philadelphia, PA  19182-4147</div>
                                    <div>For overnight delivery:</div>
                                    <div>First Line Software Inc. </div>
                                    <div>ATTN: Box 824147</div>
                                    <div>525 Fellowship Rd., Suite 330</div>
                                    <div>Mt. Laurel, NJ 08054-3415</div>
                                </div>
    
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
            <xpath expr="//p[@name='payment_communication']" position="replace"/>
            
        </template>

    </data>
    
</odoo>