        <field name="name"> FLS View Access Purchase Orders in To Approve Status</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('current_approver_id', '=', user.id)]</field>
