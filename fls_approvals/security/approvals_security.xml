<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="record_rule_journal_entry_edit" model="ir.rule">
        <field name="name">Restrict Editing Journal Entries in To Approve Status</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('state', '!=', 'to_approve')]</field>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>    
    <record id="record_rule_sale_order_edit" model="ir.rule">
