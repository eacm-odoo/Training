<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fls_account_move_view_form" model="ir.ui.view">
        <field name="name">fls.account.move.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_post'][1]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['approved'])]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['approved'])]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][1]" position="before">
                <field name="current_approver_id" invisible='1'/>
            </xpath>

            <xpath expr="//button[@name='action_post'][1]" position="before">
                <field name="loggedin_user_id" invisible='1'/>
            </xpath>

            <xpath expr="//button[@name='action_post']" position="after">
                <button string="Send for Approval"
                        type="object"
                        name="action_send_validate_je_email"
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ['draft','sent'])]}"
                />
            </xpath>

            <xpath expr="//button[@name='action_send_validate_je_email']" position="after">
                <button string="Approve"
                        type="object"
                        name="action_approve"
                        class="oe_highlight"
                        on_change="1"
                        attrs="{'invisible': [('current_approver_id', '!=', 'loggedin_user_id'),('state', 'not in', ['to_approve'])]}"
                />
            </xpath>

            <xpath expr="//button[@name='action_approve']" position="after">
                <button name="action_reject" 
                        string="Reject" 
                        type="object" 
                        class="btn-danger"
                        attrs="{'invisible': [('current_approver_id', '!=', 'loggedin_user_id'),('state', 'not in', ['to_approve'])]}"/>
            </xpath>
            <xpath expr="//button[@name='action_reject']" position="after">
                <button name="resume_approvals" 
                        string="Resume Approvals" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ['rejected'])]}"/>
            </xpath>
            <xpath expr="//button[@name='resume_approvals']" position="after">
                <button name="finalize" 
                        string="Finalize Approvals" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': [('state', 'not in', ['rejected','to_approve'])]}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,rejected,approved,posted"/>
            </xpath>

            <xpath expr="//field[@name='invoice_incoterm_id']" position="before">
                <field name="department_id" ></field>
            </xpath>
            <xpath expr="//field[@name='invoice_incoterm_id']" position="after">
                <field name="buyer" attrs="{'invisible': [('invoice_filter_type_domain', '!=', 'purchase')]}"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/t[1]" position="after">
                <field name="submitter" string="Submitter" attrs="{'invisible': [('invoice_filter_type_domain', '!=','purchase')]}"/>
            </xpath>
            <xpath expr="//field[@name='submitter']" position="after">
                <field name="bookkeeper_id"></field>
            </xpath>
        </field>
    </record>

    <record id="action_approve" model="ir.actions.server">
        <field name="name">Account Move Approve</field>
        <field name="model_id" ref="model_account_move"/>
        <field name="state">code</field>
        <field name="code">
        for order in records:
            order.action_approve()
        </field>
    </record>
</odoo>
