<odoo>
    <data>
        <!-- Form View -->
        <record id="view_approval_user_form" model="ir.ui.view">
            <field name="name">approval.user.form</field>
            <field name="model">approval.user</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="account_move_id"/>
                            <field name="has_approved"/>
                            <field name="purchase_order_id"/>
                            <field name="sale_order_id"/>
                            <field name="sequence"/>
                            <field name="user_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_approval_user_list" model="ir.ui.view">
            <field name="name">approval.user.list</field>
            <field name="model">approval.user</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="account_move_id"/>
                    <field name="has_approved"/>
                    <field name="purchase_order_id"/>
                    <field name="sale_order_id"/>
                    <field name="sequence"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_approval_user" model="ir.actions.act_window">
            <field name="name">Approval Users</field>
            <field name="res_model">approval.user</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        
    </data>
</odoo>
