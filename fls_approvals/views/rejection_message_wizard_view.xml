<?xml version="1.0"?>
<odoo>
    <data>
        <record id="approval_rejection_message_form_view" model="ir.ui.view">
            <field name="name">approval.rejection.message</field>
            <field name="model">approval.rejection.message</field>
            <field name="arch" type="xml">
                <form string="Reject Invoice">
                    <group>
                        <field name="rejection_reason"/>
                    </group>
                    <footer>
                        <button name="action_submit_rejection" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
