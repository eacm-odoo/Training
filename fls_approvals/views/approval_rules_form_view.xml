<odoo>
    <data>
        <!-- Form View -->
        <record id="view_approval_rule_form" model="ir.ui.view">
            <field name="name">approval.rule.form</field>
            <field name="model">approval.rule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                       
                        <group>
                            <group name="workflow_selection" string="Workflow Selection">
                                <field name="models"/>
                                <field name="name"/>
                                <field name="sequence"/>
                                <field name="type"  attrs="{'readonly': [('models', '!=', 'account.move')]}"/>
                            </group>
                            <group name="approver_selection" string = "Approver">
                                <field name="user_id" attrs = "{'readonly':['|','|','|','|',('project_manager','=',True),('delivery_director','=',True),('salesperson','=',True),('buyer','=',True),('timesheet_approver','=',True)]}"/>    
                                <field name="project_manager" attrs = "{'readonly':['|','|','|','|',('user_id','!=',False),('delivery_director','=',True),('salesperson','=',True),('buyer','=',True),('timesheet_approver','=',True)],'invisible':[('type','not in',['vendor.bill','sale.invoice'])]}"/>
                                <field name="delivery_director" attrs = "{'readonly':['|','|','|','|',('project_manager','=',True),('user_id','!=',False),('salesperson','=',True),('buyer','=',True),('timesheet_approver','=',True)],'invisible':[('type','=','journal.entry')]}"/>
                                <field name="salesperson" attrs = "{'readonly':['|','|','|','|',('project_manager','=',True),('delivery_director','=',True),('user_id','!=',False),('buyer','=',True),('timesheet_approver','=',True)],'invisible':[('models','!=','sale.order'),('type','not in',['sale.invoice'])]}"/>
                                <field name="buyer" attrs = "{'readonly':['|','|','|','|',('project_manager','=',True),('delivery_director','=',True),('salesperson','=',True),('user_id','!=',False),('timesheet_approver','=',True)],'invisible':[('models','!=','purchase.order'),('type','not in',['vendor.bill'])]}"/>
                                <field name="timesheet_approver" attrs = "{'readonly':['|','|','|','|',('project_manager','=',True),('delivery_director','=',True),('salesperson','=',True),('buyer','=',True),('user_id','!=',False)],'invisible':[('models','!=','purchase.order'),('type','!=','vendor.bill')]}"/>
                            </group>
                        </group>
                        <group name="confitions_selection" string="Conditions">
                            <field name="amount"/>
                            <field name="company_id"/>
                            <field name="department_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_approval_rule_list" model="ir.ui.view">
            <field name="name">approval.rule.list</field>
            <field name="model">approval.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="user_id"/>
                    <field name="models"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_approval_rule" model="ir.actions.act_window">
            <field name="name">Approval Rules</field>
            <field name="res_model">approval.rule</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_approval_rules" name="Approval Rules" parent="base.menu_users" sequence="90"
            action="action_approval_rule"/>
    </data>
</odoo>
